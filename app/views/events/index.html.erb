<h1><%= pluralize @events.length, "Event" %></h1>

  <% @events.each do |event| %>
    <article class="">
      <header>
        <h2><%= event.name %></h2>
      </header>
      <p>
        <%= truncate event.description, length: 25, separator: " " %>
      </p>
      <table>
        <tr>
          <th>When:</th>
          <td><%= event.starts_at %></td>
        </tr>
        <tr>
          <th>Where:</th>
          <td><%= event.location %></td>
        </tr>
        <tr>
          <th>Price:</th>
          <!-- using given rails helper method -->
          <!-- <td><%= number_to_currency event.price %></td> -->
          <!-- using custom helper method -->
          <td><%= format_price event %></td>
        </tr>
      </table>
    </article>
  <% end %>
