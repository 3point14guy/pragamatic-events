<h1><%= pluralize @events.length, "Event" %></h1>

  <% @events.each do |event| %>
    <article class="">
      <header>
        <!-- <h2><%= link_to event.name,  event_path(id: event.id)%></h2> -->
        <!-- OR... -->
        <!-- rails is built that you can just pass the object and it will automatially extract the id -->
        <!-- <h2><%= link_to event.name,  event_path(event)%></h2> -->
        <!-- OR... -->
        <!-- rails has a shortcut where we can just pass the event object and will automatially generate the correct helper path -->
        <h2><%= link_to event.name, event %></h2>
      </header>
      <p>
        <%= truncate event.description, length: 25, separator: " " %>
      </p>
      <table>
        <tr>
          <th>When:</th>
          <td><%= event.starts_at %></td>
        </tr>
        <tr>
          <th>Where:</th>
          <td><%= event.location %></td>
        </tr>
        <tr>
          <th>Price:</th>
          <!-- using given rails helper method -->
          <!-- <td><%= number_to_currency event.price %></td> -->
          <!-- using custom helper method -->
          <td><%= format_price event %></td>
        </tr>
      </table>
    </article>
  <% end %>
